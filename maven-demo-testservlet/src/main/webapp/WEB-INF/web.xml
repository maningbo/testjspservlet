<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
		xmlns="http://xmlns.jcp.org/xml/ns/javaee" 
		xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd" 
		id="WebApp_ID" version="3.1">

<filter>
	<filter-name>ServletFilter</filter-name>
	<filter-class>testservlet.ServletFilter</filter-class>
	<init-param>
		<param-name>encoding</param-name>
		<param-value>UTF-8</param-value><!-- ISO-8859-1、UTF-8、GB2312、GBK -->
	</init-param>
</filter>
<filter-mapping>
	<filter-name>ServletFilter</filter-name>
	<url-pattern>/*</url-pattern>
</filter-mapping>

<servlet>
	<servlet-name>ServletDemoFirst</servlet-name>
	<servlet-class>testservlet.ServletDemoFirst</servlet-class>
</servlet>
<servlet-mapping>
	<servlet-name>ServletDemoFirst</servlet-name>
	<url-pattern>/servlet/hello</url-pattern>
</servlet-mapping>

<session-config>
	<session-timeout>2</session-timeout>
</session-config>
</web-app>